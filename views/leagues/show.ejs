<div class="row s12">
  <div class="col s12 m5 l5">
<h1><%= league.name %></h1>
<% if (locals.userTeam) { %>
  <% if (userTeam.role === "admin") { %>
     <a class="btn pink accent-2" type="button" href="/leagues/<%= league.id %>/manage">Manage League</a>
<% } %>
<% } %>
</div>
<div class="col s12 m5 l5 leaguedesc">
  <h4>&ldquo;<%= league.description %>&rdquo;</h4>
</div>
</div>
<div class="row s12">
<table class="responsive-table league">
        <thead>
          <tr>
              <th>Rank</th>
              <th>Change</th>
              <th>Team Name</th>
              <th>Team Manager</th>
              <th>Total Points</th>
              <th></th>
          </tr>
        </thead>

        <tbody>
          <% teams.forEach(function(team) { %>
          <tr>
            <td>1</td>
            <td>0</td>
            <td><%= team.name %></td>
            <td><%= team.user.name %></td>
            <td>99</td>
            <td><button class="btn pink accent-2" type="button" data-id="" href="#manageteam">Manage</button></td>
          </tr>
           <% }); %>
          <tr>
            <td>2</td>
            <td>+1</td>
            <td>test team 2</td>
            <td>team person 2</td>
            <td>70</td>
            <td></td>
          </tr>
          <tr>
            <tr>
              <td>3</td>
              <td>-1</td>
              <td>test team 3</td>
              <td>team person 3</td>
              <td>69</td>
              <td></td>
            </tr>
        </tbody>
      </table>
    </div>
