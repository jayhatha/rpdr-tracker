
<h1><%= list.name %></h1>
<p><%= list.description %></p>

<button class="btn pink accent-2 modal-trigger" href="#editname" type="button" id="<%= list.id %>">Edit List</button>

<% queens.forEach(function(queen) { %>
    <div>
      <a href="/queens/<%= queen.name %>"><h4><%= queen.name %></h4></a>
      <button class="btn pink accent-2 delete" href="/lists/<%= list.id %>/<%= queen.id %>" type="button" id="<%= queen.id %>">Delete from List</button>
    </div>
 <% }); %>


 <!-- edit name modal -->
   <div id="editname" class="modal">
     <div class="modal-content">
       <h4>Edit List</h4>
       <form class="update" action="/lists/<%= list.id %>/" method="POST">
         <div class="form-group">
           <label for="name">New List Name</label>
           <input id="name" class="form-control" type="text" name="name" value="<%= list.name %>">
         </div>
         <div class="form-group">
           <label for="description">New List Description</label>
           <input id="description" class="form-control" type="text" name="description" value="<%= list.description %>">
         </div>

         <input class="btn pink accent-2 modal-close" type="submit">
       </form>
     </div>
     <div class="modal-footer">
       <a href="#!" class="modal-close waves-effect waves-pink btn-flat">Close</a>
     </div>
   </div>
